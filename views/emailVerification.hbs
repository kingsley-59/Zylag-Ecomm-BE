<!-- views/emailVerification.handlebars -->
<!DOCTYPE html>
<html>
<head>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f2f2f2;
      padding: 20px;
    }

    h1 {
      color: #333;
    }

    p {
      color: #555;
      line-height: 1.5;
    }

    .container {
      max-width: 600px;
      margin: 0 auto;
      background-color: #fff;
      border-radius: 5px;
      padding: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Verify Your Email Address</h1>
    <p>Dear {{ name }},</p>
    <p>Thank you for signing up for our platform. To complete your registration, please verify your email address by clicking the link below:</p>
    <p><a href="{{ verificationLink }}">Verify Email Address</a></p>
    <p>If you did not sign up for an account, please disregard this email.</p>
    <p>Best regards,</p>
    <p>The Ecommerce Team</p>
  </div>
</body>
</html>
